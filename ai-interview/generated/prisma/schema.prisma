// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Job {
  id           String   @id @default(uuid())
  jobTitle     String
  companyName  String
  description  String
  requirements String[]
  companyInfo  String
  location     String?
  jobType      String?
  salaryRange  String?
  sourceUrl    String?
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt

  interviews Interview[]

  @@index([jobTitle])
  @@index([companyName])
}

model Interview {
  id    String @id @default(cuid())
  jobId String
  job   Job    @relation(fields: [jobId], references: [id], onDelete: Cascade)

  roomName  String
  startTime DateTime
  endTime   DateTime?
  duration  Int? // Duration in seconds

  transcript Json // Store the full transcript as JSON

  // Optional: Store analysis/feedback
  feedback String? @db.Text
  score    Float?

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@index([jobId])
  @@index([roomName])
}
